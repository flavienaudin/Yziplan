{% extends "AppBundle:Core:layout.html.twig" %}

{% block content_body %}
    <div class="card">
        <div class="card-body">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                    <li data-target="#carousel-example-generic" data-slide-to="3" class=""></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="{{ asset('bundles/app/img/carousel/carousel-bar.jpg') }}" alt="{{ "landing_page.carousel.after_work.alt"|trans }}">
                        <div class="carousel-caption">
                            <h3>{{ "landing_page.carousel.after_work.title"|trans }}</h3>
                            <p>{{ "landing_page.carousel.after_work.text"|trans }}</p>
                            <p class="m-t-15"><a href="#" class="btn btn-lg palette-Teal bg waves-effect">{{ "landing_page.carousel.button.new_event"|trans }}</a></p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="{{ asset('bundles/app/img/carousel/carousel-reunion.jpg') }}" alt="{{ "landing_page.carousel.meeting.alt"|trans }}">
                        <div class="carousel-caption">
                            <h3>{{ "landing_page.carousel.meeting.title"|trans }}</h3>
                            <p>{{ "landing_page.carousel.meeting.text"|trans }}</p>
                            <p class="m-t-15"><a href="#" class="btn btn-lg palette-Teal bg waves-effect">{{ "landing_page.carousel.button.new_event"|trans }}</a></p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="{{ asset('bundles/app/img/carousel/carousel-soiree.jpg') }}" alt="{{ "landing_page.carousel.party.alt"|trans }}">
                        <div class="carousel-caption">
                            <h3>{{ "landing_page.carousel.party.title"|trans }}</h3>
                            <p>{{ "landing_page.carousel.party.text"|trans }}</p>
                            <p class="m-t-15"><a href="#" class="btn btn-lg palette-Teal bg waves-effect">{{ "landing_page.carousel.button.new_event"|trans }}</a></p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="{{ asset('bundles/app/img/carousel/carousel-vacances.jpg') }}" alt="{{ "landing_page.carousel.holiday.alt"|trans }}">
                        <div class="carousel-caption">
                            <h3>{{ "landing_page.carousel.holiday.title"|trans }}</h3>
                            <p>{{ "landing_page.carousel.holiday.text"|trans }}</p>
                            <p class="m-t-15"><a href="#" class="btn btn-lg palette-Teal bg waves-effect">{{ "landing_page.carousel.button.new_event"|trans }}</a></p>
                        </div>
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="zmdi zmdi-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="zmdi zmdi-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h1>Bonjour Et bienvenue sur <strong>Plany</strong></h1>
        </div>
        <div class="card-body card-padding">
            <p><a href="{{ path("event") }}" class="btn btn-primary btn-block btn-lg">Evénement</a></p>
            <p>Landing page à faire :)</p>

        </div>
    </div>
{% endblock %}