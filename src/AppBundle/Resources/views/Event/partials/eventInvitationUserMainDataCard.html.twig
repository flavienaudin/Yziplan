{# Données d'entrée :
- userEventInvitation : EventInvitation de l'utilisateur
- userEventInvitationForm : Form permettant de répondre à l'invitation
#}

<div class="card" id="user-event-invitation-card">
    {% if userEventInvitationForm is defined and userEventInvitationForm is not null %}
        {{ form_start(userEventInvitationForm, {'action': path('displayEvent',{'token':userEventInvitation.event.token}), 'attr':{'id':'userEventInvitationAbout'}}) }}
    {% endif %}
    <div class="card-header">
        <h3>{{ "eventInvitation.maindata.card.title"|trans }}</h3>
    </div>
    <div class="card-body card-padding">
        {% if userEventInvitationForm is defined and userEventInvitationForm is not null %}
            <div class="form-group">
                {{ form_label(userEventInvitationForm.guestName, 'eventInvitation.form.name.label') }}
                <div class="fg-line">
                    {{ form_widget(userEventInvitationForm.guestName, {'attr':{'placeholder':'eventInvitation.form.guestname.placeholder'}}) }}
                    {{ form_errors(userEventInvitationForm.guestName) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(userEventInvitationForm.email, 'eventInvitation.form.email.label') }}
                <div class="fg-line">
                    {{ form_widget(userEventInvitationForm.email, {'attr':{'placeholder':'eventInvitation.form.email.placeholder'}}) }}
                    {{ form_errors(userEventInvitationForm.email) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(userEventInvitationForm.answer, 'eventInvitation.form.answer.label') }}
                <div class="fg-line">
                    {{ form_widget(userEventInvitationForm.answer, {'attr':{'placeholder':'eventInvitation.form.answer.placeholder'}}) }}
                    {{ form_errors(userEventInvitationForm.answer) }}
                </div>
            </div>
        {% else %}
            <dl>
                <dt>{{ "eventInvitation.form.name.label"|trans }}</dt>
                <dd>
                    {{ userEventInvitation.displayableName is not empty?userEventInvitation.displayableName:" - " }}</dd>
                <dt>{{ "eventInvitation.form.email.label"|trans }}</dt>
                <dd>
                    {{ userEventInvitation.displayableEmail is not empty? userEventInvitation.displayableEmail:" - " }}
                </dd>
            </dl>
        {% endif %}
    </div>
    <div class="card-footer card-padding-sm">
        <div class="text-right">
            {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") and userEventInvitation.applicationUser is null and userEventInvitation.status is not constant
            ('AppBundle\\Utils\\enum\\EventInvitationStatus::AWAITING_VALIDATION') %}
                <i class="m-r-10"><a href="{{ path('disconnectEventInvitation', {'token':userEventInvitation.event.token}) }}">
                        {{ "eventInvitation.maindata.card.text.disconnect"|trans({'%user%': userEventInvitation.displayableName}) }}
                    </a></i>
            {% endif %}
            {% if userEventInvitationForm is defined %}
                <button type="submit" class="btn btn-primary waves-effect">{{ "global.button.save"|trans }}</button>
            {% endif %}
        </div>
    </div>
    {% if userEventInvitationForm is defined %}
        {{ form_end(userEventInvitationForm ) }}
    {% endif %}
    <script>
        $('form#userEventInvitationAbout').on("submit", function (e) {
            ajaxFormSubmission(this, e, function (responseJSON, textStatus, jqXHR) {
                if (responseJSON.htmlContent) {
                    $('#user-event-invitation-card').replaceWith(responseJSON.htmlContent);
                }
            }, null, null);
        });
    </script>
</div>