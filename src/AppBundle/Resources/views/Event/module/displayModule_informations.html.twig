{# Données d'entrée :
- module (Module) Le module à afficher
#}

<div id="module-information-{{ module.token }}"
     class="card-body {% block moduleInformationClass %}{{ module.description is empty or module.description =='<p><br></p>' ?"hidden" }} card-padding-sm{% endblock %}"
        {% block moduleInformationAttributs %}{% endblock %}>
    {% block moduleInformation %}
        <div>{{ module.description|raw }}</div>
    {% endblock moduleInformation %}
</div>