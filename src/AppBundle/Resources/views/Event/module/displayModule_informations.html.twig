{# Données d'entrée :
- module (Module) Le module à afficher
#}

<div id="module-information-{{ module.token }}" class="card-body {% block moduleInformationClass %}{{ module.description is empty?"hidden" }} card-padding-sm{% endblock %}"
        {% block moduleInformationAttributs %}{% endblock %}>
    {% block moduleInformation %}
        <div>{{ module.description|nl2br }}</div>
    {% endblock moduleInformation %}
</div>