<div class="pmb-block" id="basic_information">
    <div class="pmbb-header">
        <h2><i class="zmdi zmdi-account m-r-5"></i> {{ "profile.show.about.basic_information.title"|trans }}</h2>
        <ul class="actions">
            <li><a data-profile-action="edit" data-profile-action-target="#basic_information" href="#"><i class="zmdi zmdi-edit"></i></a></li>
        </ul>
    </div>

    <div class="pmbb-body p-l-30">
        <div class="pmbb-view">
            <dl class="dl-horizontal">
                <dt>{{ "profile.show.about.basic_information.fullname.title"|trans }}</dt>
                <dd id="pmb-view-fullname">{{ app.user.userAbout.fullname is not empty ? app.user.userAbout.fullname : "-" }}</dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>{{ "profile.show.about.basic_information.gender.title"|trans }}</dt>
                <dd id="pmb-view-gender">{{ app.user.userAbout.gender is not empty ? ("global.gender."~app.user.userAbout.gender)|trans():"-" }}</dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>{{ "profile.show.about.basic_information.birthday.title"|trans }}</dt>
                <dd id="pmb-view-birthday">{{ app.user.userAbout.birthday is not null?app.user.userAbout.birthday|localizeddate('short', 'none'):"-" }}</dd>
            </dl>
        </div>

        <div class="pmbb-edit">
            {{ form_start(form_basic_information, {'method': 'post', 'action': path('updateUserBasicInformationAjax'), 'attr':{'id':'userBasicInformation',
                'data-profile-pmb-block-target':'#basic_information'} }) }}
            <dl class="dl-horizontal">
                <dt class="p-t-10">{{ form_label(form_basic_information.fullname, "profile.show.about.basic_information.fullname.label") }}</dt>
                <dd>
                    <div class="fg-line">
                        {{ form_widget(form_basic_information.fullname, {'placeholder': "profile.show.about.basic_information.fullname.placeholder"} ) }}
                    </div>
                </dd>
            </dl>
            <dl class="dl-horizontal">
                <dt class="p-t-10">{{ form_label(form_basic_information.gender, 'profile.show.about.basic_information.gender.label') }}</dt>
                <dd>
                    <div class="fg-line">
                        {{ form_widget(form_basic_information.gender, {'attr':{'class':'selectpicker'}, 'placeholder':'profile.show.about.basic_information.gender.title'|trans}) }}
                    </div>
                </dd>
            </dl>
            <dl class="dl-horizontal">
                <dt class="p-t-10">{{ form_label(form_basic_information.birthday, 'profile.show.about.basic_information.birthday.title') }}</dt>
                <dd>
                    <div class="dtp-container dropdown fg-line">
                        {{ form_widget(form_basic_information.birthday, {'attr':{'class':'date-picker'}}) }}
                    </div>
                </dd>
            </dl>

            <div class="m-t-30">
                <button type="submit" class="btn btn-primary btn-sm waves-effect">{{ "global.button.save"|trans }}</button>
                <button data-profile-action="reset" data-profile-action-target="#basic_information" class="btn btn-default btn-sm">{{ "global.button.cancel"|trans }}</button>
            </div>
            {{ form_rest(form_basic_information) }}
            {{ form_end(form_basic_information) }}
        </div>
    </div>
</div>

<div class="pmb-block" id="pmb-biography">
    <div class="pmbb-header">
        <h2><i class="zmdi zmdi-face m-r-5"></i> {{ "profile.show.about.biography.title"|trans }}</h2>
        <ul class="actions">
            <li><a data-profile-action="edit" data-profile-action-target="#pmb-biography" href="#"><i class="zmdi zmdi-edit"></i></a></li>
        </ul>
    </div>
    <div class="pmbb-body p-l-30">
        <div class="pmbb-view" id="pmb-view-biography">
            {{ app.user.userAbout.biography is not empty?app.user.userAbout.biography:"profile.show.about.biography.empty"|trans }}
        </div>

        <div class="pmbb-edit">
            {{ form_start(form_biography, {'method': 'post', 'action': path('updateUserBiographyAjax'), 'attr': {'id':'userBiography','data-profile-pmb-block-target':'#pmb-biography'} }) }}
            <div class="fg-line">
                {{ form_widget(form_biography.biography, {'attr':{'rows':5,'placeholder':'profile.show.about.biography.placeholder'|trans}} ) }}
            </div>
            <div class="m-t-10">
                <button type="submit" class="btn btn-primary btn-sm waves-effect">{{ "global.button.save"|trans }}</button>
                <button data-profile-action="reset" data-profile-action-target="#pmb-biography" class="btn btn-default btn-sm">{{ "global.button.cancel"|trans }}</button>
            </div>
            {{ form_rest(form_biography) }}
            {{ form_end(form_biography) }}
        </div>
    </div>
</div>

