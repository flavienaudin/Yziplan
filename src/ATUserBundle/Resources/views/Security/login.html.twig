{% extends '@ATUser/layout.html.twig' %}

{% block meta_title %}
    {% spaceless %}{{ parent() }} - {{ "Connexion"|trans }}{% endspaceless %}
{% endblock %}

{% block fos_user_content %}
    <div class="row">
        <div class="col-xs-12 col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <div class=ibox>
                <div class="ibox-title text-center">
                    <h1>{{ "Se_connecter"|trans }}</h1>
                </div>
                <div class="ibox-content">
                    <form action="{{ path("fos_user_security_check") }}" method="POST" class="form-horizontal" autocomplete="off">
                        <span class="help-block">
                            {% if error %}
                                <div class="alert alert-warning">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        </span>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                        <div class="form-group">
                            <label class="col-sm-2 sr-only hidden" for="username">{{ "Email"|trans }}</label>
                            <div class="col-sm-10 col-sm-offset-1">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-at"></i></span> <input type="text" class="form-control" id="username" name="_username"
                                                                                                           placeholder="{{ "Adresse_email"|trans }}" value="{{ last_username }}" required="required"
                                                                                                           autofocus/>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 sr-only hidden" for="password">{{ "Mot_de_passe"|trans }}</label>
                            <div class="col-sm-10 col-sm-offset-1">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span> <input type="password" class="form-control" id="password" placeholder="{{ "Mot_de_passe"|trans }}"
                                                                                                             name="_password" required="required"/>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-5">
                                <label class="checkbox"> <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked="checked" class="i-checks"> {{ "Se_souvenir_de_moi"|trans }}
                                </label>
                            </div>
                            <div class="col-sm-5 text-right">
                                <i><a href="{{ path("fos_user_resetting_request") }}">{{ "Mot_de_passe_oublie"|trans }}
                                        &nbsp;?</a></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-1">
                                <input type="submit" class="btn btn-primary btn-lg btn-block" value="{{ 'Se_connecter'|trans }}">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12 col-sm-10 col-sm-offset-1 text-center">
                                <p><i>{{ "Connectez_vous_reseaux_sociaux"|trans }}&nbsp;:</i></p>
                            </div>
                            <div class="col-xs-6 col-sm-5 col-sm-offset-1">
                                <a href="{{ path('hwi_oauth_service_redirect',{'service':'google'}) }}" class="btn btn-lg btn-block btn-danger btn-google-plus"><i class="fa
                                        fa-google-plus-square"></i> <span class="hidden-xs">{{ "reseau_social.google"|trans }}</span> </a>
                            </div>
                            <div class="col-xs-6 col-sm-5">
                                <a href="{{ path('hwi_oauth_service_redirect',{'service':'facebook'}) }}" class="btn btn-lg btn-block btn-primary btn-facebook"><i class="fa
                                        fa-facebook-official"></i> <span class="hidden-xs">{{ "reseau_social.facebook"|trans }}</span> </a>
                            </div>
                        </div>
                    </form>

                    <div class="col-sm-10 col-sm-offset-1 text-center">
                        <p><i>{{ "Pas_de_compte"|trans }}</i></p>
                        <a href="{{ path('fos_user_registration_register') }}" class="btn btn-default">{{ "S_inscrire"|trans }}</a>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}