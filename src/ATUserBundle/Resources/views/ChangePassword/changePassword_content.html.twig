{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
<div class="input-group form-group fg-float {% if (not form.current_password.vars.compound or form.current_password.vars.force_error|default(false)) and not form.current_password.vars.valid %} has-error{% endif %}">
    <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
    <div class="fg-line">
        {{ form_widget(form.current_password) }}
        {{ form_label(form.current_password, null,  {"label_attr":{"class":"fg-label"}}) }}
    </div>
    {{ form_errors(form.current_password) }}
</div>

{% for passwordField in form.plainPassword %}
    <div class="input-group form-group fg-float {% if (not passwordField.vars.compound or passwordField.vars.force_error|default(false)) and not passwordField.vars.valid %} has-error{% endif %}">
        {% if loop.index == 1 %}
            <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
            {% set password_label = "form.password"|trans({}, 'FOSUserBundle') %}
        {% else %}
            <span class="input-group-addon"><i class="zmdi zmdi-lock-outline"></i></span>
            {% set password_label = "form.password_confirmation"|trans({}, 'FOSUserBundle') %}
        {% endif %}
        <div class="fg-line">
            {{ form_widget(passwordField) }}
            {{ form_label(passwordField, null,  {"label_attr":{"class":"fg-label"}}) }}
        </div>
        {{ form_errors(passwordField) }}
    </div>
{% endfor %}
<div>
    <button type="submit" class="btn btn-block btn-lg palette-Teal bg waves-effect">{{ 'change_password.submit'|trans }}</button>
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
